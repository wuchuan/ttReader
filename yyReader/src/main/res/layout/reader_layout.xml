<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/read_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </RelativeLayout>

    <TextView
        android:id="@+id/read_title_chapter"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="第一章"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/reader_phone_info"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/reader_timer"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text=""
            android:textColor="@android:color/black" />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/read_rate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:text="100%"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reader_title_use"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#242424"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >
        <ImageView
            android:id="@+id/reader_back"
             android:layout_width="8dp"
            android:layout_height="14dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_white"  />

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/buyer_selecter" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/message_selecter" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/sreach" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reader_change_set"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/reader_change"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:src="@drawable/moon_mode" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reader_chapter_change"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#242424"
            android:gravity="center" >

            <TextView
                android:id="@+id/reader_pre_chapter"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="上一章"
                android:textColor="@android:color/white" />

            <SeekBar
                android:id="@+id/reader_seekbar"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="0dp" />

            <TextView
                android:id="@+id/reader_next_chapter"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="下一章"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reader_set_list"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#242424"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/reader_open_catalogue"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:src="@drawable/mark_cal" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="目录笔记"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reader_font_bg"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:src="@drawable/font_bg" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="字体背景"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reader_open_flip_mode"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:src="@drawable/pager_mode" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="翻页模式"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reader_open_protect_eye"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:src="@drawable/eye_light" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="护眼亮度"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reader_open_other_set"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="18dp"
                    android:src="@drawable/other" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="其他"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reader_font_set"
        android:layout_width="fill_parent"
        android:layout_height="153dp"
        android:layout_alignParentBottom="true"
        android:background="#242424"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="74dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="字号"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/reader_font_set_remove"
                android:layout_width="112dp"
                android:layout_height="22.5dp"
                android:src="@drawable/font_size_sub" />

            <TextView
                android:id="@+id/reader_font_set_size"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="21"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/reader_font_set_add"
                android:layout_width="112dp"
                android:layout_height="22.5dp"
                android:src="@drawable/font_size_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="74dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="背景"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/reader_font_set_color1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/font_bg1" />

            <ImageView
                android:id="@+id/reader_font_set_color2"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/font_bg2" />

            <ImageView
                android:id="@+id/reader_font_set_color3"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/font_bg3" />

            <ImageView
                android:id="@+id/reader_font_set_color4"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/font_bg4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="74dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="纹理"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/reader_font_set_bg1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/font_color1" />

            <ImageView
                android:id="@+id/reader_font_set_bg2"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/font_color2" />

            <ImageView
                android:id="@+id/reader_font_set_bg3"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/font_color3" />

            <ImageView
                android:id="@+id/reader_font_set_bg4"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="28dp"
                android:background="@drawable/font_color4" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reader_protect_eye"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="#242424"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/reader_protect_eye_mode"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/reader_protect_eye_mode_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="护眼模式" />

                <View
                    android:id="@+id/reader_protect_eye_mode_view"
                    android:layout_width="55dp"
                    android:layout_height="3dp"
                    android:layout_marginBottom="0dp"
                    android:background="#6ED3C4" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reader_night_mode"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/reader_night_mode_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="夜间模式" />

                <View
                    android:id="@+id/reader_night_mode_view"
                    android:layout_width="55dp"
                    android:layout_height="3dp"
                    android:layout_marginBottom="0dp"
                    android:background="#6ED3C4" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#303030" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:text="亮度" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/light_low" />

            <SeekBar
                android:id="@+id/reader_light_bar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:focusable="true"
                android:max="100"
                android:maxHeight="1dp"
                android:minHeight="1dp"
                android:progressDrawable="@drawable/light_line"
                android:thumb="@drawable/seekbar_thumb"
                android:thumbOffset="0dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="18dp"
                android:src="@drawable/light_height" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reader_flip_mode"
        android:layout_width="fill_parent"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:background="#242424"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="52.5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/reader_mode_real"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/reader_mode_real_img"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/pager_mode_selecter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="仿真" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reader_mode_rl"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/reader_mode_rl_img"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/pager_mode_selecter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="左右" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reader_mode_tb"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/reader_mode_tb_img"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/pager_mode_selecter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="上下" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reader_mode_no"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/reader_mode_no_img"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/pager_mode_selecter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="无" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reader_other_set"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#242424"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/reader_other_set_addmk"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/add_maker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="添加书签" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reader_other_set_award"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/award" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="打赏" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reader_other_set_share"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="分享" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reader_other_set_prepurchase"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/prepurchase" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="预购买" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/reader_other_set_adaptation"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/adaptation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="想改编" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reader_catalogue_maker"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:background="#666666"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp" >

                <TextView
                    android:id="@+id/reader_catalogue_maker_title"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="花千骨" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/reader_catalogue"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/catalogue_selecter" />

                <ImageView
                    android:id="@+id/reader_marker"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/maker_selecter" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#6ED3C4" />

            <com.zqgame.yyreader.widget.CatalogueViewPager
                android:id="@+id/catalogue_viewpager"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" >
            </com.zqgame.yyreader.widget.CatalogueViewPager>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>